<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <TextView
        android:id="@+id/tvCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/correct"
        android:textColor="@color/dialog_good_color"
        android:textSize="@dimen/vroom_dialog_text_size" />

    <View
        android:id="@+id/correctDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tvCorrect"
        android:layout_marginBottom="5dp"
        android:background="@color/dialog_divider_color" />


    <ImageView
        android:id="@+id/ivCar"
        android:layout_below="@id/correctDivider"
        android:layout_width="@dimen/vroom_dialog_image_width"
        android:layout_height="@dimen/vroom_dialog_image_height"
        android:contentDescription="car"/>

    <View
        android:id="@+id/correctDivider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ivCar"
        android:layout_marginTop="5dp"
        android:background="@color/dialog_divider_color" />

    <Button
        android:id="@+id/bNextRound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/correctDivider2"
        android:background="@drawable/blackblue"
        android:text="@string/nextRound"
        android:textColor="@color/dialog_normal_text_color"
        android:textSize="@dimen/vroom_dialog_button_text_size"/>

</RelativeLayout><!-- From: file:/C:/Users/Marco/AndroidStudioProjects/VroomGuesser/app/src/main/res/layout/correctdialog.xml -->