<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <TextView
        android:id="@+id/tvNewGameDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/newgame"
        android:textColor="@color/dialog_normal_text_color"
        android:textSize="@dimen/vroom_dialog_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNewGameDialog"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bNoNewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blackblue"
            android:text="@string/no"
            android:textColor="@color/dialog_normal_text_color"
            android:textSize="@dimen/vroom_dialog_button_text_size"/>

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/bYesNewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blackblue"
            android:text="@string/yes"
            android:textColor="@color/dialog_normal_text_color"
            android:textSize="@dimen/vroom_dialog_button_text_size"/>
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Marco/AndroidStudioProjects/VroomGuesser/app/src/main/res/layout/newgamedialog.xml -->